                <receiver android:name=".ImplicitBroadcastAsExplicit">
                    <intent-filter>
                        <action android:name="com.packgageNameOfThisProject.ACTION_SEND" />
                    </intent-filter>
                </receiver>
        -->

    </application>

</manifest>