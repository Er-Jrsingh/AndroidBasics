<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edt_txt"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="@string/enter_text_to_store"
        tools:ignore="Autofill,TextFields" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgView"
        android:src="@drawable/ic_launcher_foreground"
        android:contentDescription="@string/img" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_create"
        android:layout_marginTop="20dp"
        android:text="@string/create_file"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_get_img"
        android:layout_marginTop="20dp"
        android:text="@string/write_img"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_read_file"
        android:layout_marginTop="20dp"
        android:text="@string/read_file"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_read_img"
        android:layout_marginTop="20dp"
        android:text="@string/read_img"/>

</androidx.appcompat.widget.LinearLayoutCompat>